extends ../templates/template-modal.pug
block content
    +modal('basket-modal', 'right')(data-tabs-modal).modal--bordered
        .aside-tabs
            .aside-tabs__links.js-modal__tabs
                button(data-modal-tab="basket").aside-tabs__link Корзина
                button(data-modal-tab="favorites").aside-tabs__link Список желаний
                button(data-modal-tab="maybe-like").aside-tabs__link.media-max--tab Вам может понравиться
            .aside-tabs__area.js-modal__contents
                .aside-tabs__content(data-modal-content="basket")
                    .basket.js-basket
                        .basket__content
                            .basket__head
                                .basket__quantity.js-basket-quantity 4 товара
                                button.basket__clear.js-basket-clear Очистить
                            .basket__content_inner
                                ul.basket__list.js-toggle-free
                                    li.basket__list_item
                                        +basket-item({
                                            title: "Бюстгальтер Viki",
                                            image: "assets/img/card/png/card-2.png",
                                            link: "/product.html",
                                            price: 2400,
                                            colors: ["Бежевый", "Розовый", "Фиолетовый"],
                                            selectsView: "down"
                                        })
                                    li.basket__list_item
                                        +basket-item({
                                            title: "Боди Le Journal Intime Jadi",
                                            image: "assets/img/card/png/card-3.png",
                                            link: "/product.html",
                                            price: 5700,
                                            colors: ["Бежевый", "Розовый", "Фиолетовый"],
                                            selectsView: "down"
                                        })
                                    li.basket__list_item
