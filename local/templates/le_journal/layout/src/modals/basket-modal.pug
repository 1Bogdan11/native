                                            title: "Боди Le Journal Intime Jadi",
                                            image: "assets/img/card/png/card-2.png",
                                            link: "/product.html",
                                            price: 4321,
                                            colors: ["Бежевый", "Розовый", "Фиолетовый"],
                                            selectsView: "up"
                                        })

                        .basket__footer
                            form.basket__form.js-form
                                +input({
                                    type: "text",
                                    label: "Промокод или сертификат"
                                })
                                button.form__button
                                    +svg("arrow-thin")
                                .promocode-success
                                    .promocode-success__part
                                        +svg("success")
                                        span Код на скидку 1000₽ применен
                                    button.promocode-success__close.js-promocode__close
                                        +svg("close")

                                .promocode-error
                                    +svg("error")
                                    span Код неактивен, либо не может быть применен в данных условиях

                            .basket__footer_inner
                                .basket__footer_part
                                    span Итого
                                    .basket__price.js-basket-price 9 255 ₽
                                button.button-brand(data-modal-url="/modals/ordering-modal.html" data-modal-nested) Оформить

