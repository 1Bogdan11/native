mixin diary-card(data)
    a(href="#" data-scroll).diary-card
        .diary-card__image
            img(src=data.img)
        .diary-card__content
            .diary-card__head
                .diary-card__category !{data.category}
                .diary-card__date !{data.date}
            .diary-card__title !{data.title}
            .diary-card__description !{data.description}