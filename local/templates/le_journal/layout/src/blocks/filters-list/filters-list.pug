mixin filters-list(data)
    ul.filters-list&attributes(attributes)
        each item in data.list
            .filters-list__item
                if item.checked
                    input(type="radio" id=item.id name=data.name checked).jsFilterItem
                else 
                    input(type="radio" id=item.id name=data.name).jsFilterItem
                label(for=item.id) !{item.title}