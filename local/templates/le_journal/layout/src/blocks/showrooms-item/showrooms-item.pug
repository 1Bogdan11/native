mixin showrooms-item(data)
    if data.pointsPayment
        .showrooms__item
            .showrooms__item-image.img
                img(src=data.image data-scroll data-scroll-speed="-0.8").img__i
            +point-info({
                title: data.title,
                type: data.type,
                pointsPayment: true
            })
    else
        .showrooms__item
            .showrooms__item-image.img
                img(src=data.image data-scroll data-scroll-speed="-0.8").img__i
            +point-info({
                title: data.title,
                type: data.type
            })
        